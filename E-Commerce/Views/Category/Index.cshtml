@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_NotificationPartial" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert"  class="btn btn-secondary">
                <i class="fa-solid fa-plus"></i>  Create New Category
            </a>
        </div>
    </div>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            
            <th>Category Name</th>
            <th>Parant Category</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>

                 <td style="color: @(item.ParentCategory == null ? "red" : "black")">
            @(item.ParentCategory != null ? item.ParentCategory.Name : "N/A")
                 </td>


                <td>
                    <a asp-controller="Category" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </td>


            </tr>
            
                
        }
        
    </tbody>
</table>

