﻿
@model IEnumerable<ProductItem>
@* <!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<!-- Link to your custom CSS -->

@* <partial name="_Notification" /> *@

<div class="row pb-3">
    @foreach (var productItem in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@productItem.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@productItem.SKU</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-100 text-center">@productItem.Product?.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center"> Price : 
                                    <span>
                                        @productItem.Price.ToString("c")
                                    </span>
                                </p>
                                <p class="text-dark text-opacity-75 text-center">
                                    InStock :
                                    <span>
                                        @productItem.QuantityInStock
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="ProductItemDetails" asp-route-Id="@productItem.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
